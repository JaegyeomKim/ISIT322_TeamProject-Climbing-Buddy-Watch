<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_screen">

    <fragment
        android:id="@+id/reset_save_screen"
        android:name="com.hfad.climbingbuddywatch.reset_save_screen"
        android:label="fragment_reset_save_screen"
        tools:layout="@layout/fragment_reset_save_screen" >
        <action
            android:id="@+id/action_reset_save_screen_to_start_screen"
            app:destination="@id/start_screen" />
    </fragment>
    <fragment
        android:id="@+id/start_screen"
        android:name="com.hfad.climbingbuddywatch.start_screen"
        android:label="fragment_start_screen"
        tools:layout="@layout/fragment_start_screen" >
        <action
            android:id="@+id/action_start_screen_to_stop_screen"
            app:destination="@id/stop_screen" />
    </fragment>
    <fragment
        android:id="@+id/stop_screen"
        android:name="com.hfad.climbingbuddywatch.stop_screen"
        android:label="fragment_stop_screen"
        tools:layout="@layout/fragment_stop_screen" >
        <action
            android:id="@+id/action_stop_screen_to_reset_save_screen"
            app:destination="@id/reset_save_screen" />
    </fragment>
    <fragment
        android:id="@+id/home_screen"
        android:name="com.hfad.climbingbuddywatch.home_screen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_home_screen_to_start_screen"
            app:destination="@id/start_screen" />
    </fragment>
</navigation>